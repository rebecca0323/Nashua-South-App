<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage"
    android:background="@drawable/welcome"
    >

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/southlogo"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/contact"
        android:layout_width="127dp"
        android:layout_height="82dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/round_image"
        android:backgroundTint="#201438"
        android:fontFamily="@font/baloo"
        android:text="Contact"
        android:onClick="contactPage"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sports" />

    <Button
        android:id="@+id/calendar"
        style="@android:style/Widget.DeviceDefault.Light.Button.Small"
        android:layout_width="127dp"
        android:layout_height="82dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="46dp"
        android:background="@drawable/round_image"
        android:backgroundTint="#201438"
        android:onClick="calendarPage"
        android:fontFamily="@font/baloo"
        android:text="Calendar"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
        android:id="@+id/sports"
        android:layout_width="127dp"
        android:layout_height="82dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/round_image"
        android:backgroundTint="#201438"
        android:fontFamily="@font/baloo"
        android:text="Sports"
        android:onClick="sportsPage"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
        android:id="@+id/x2aspen"
        android:layout_width="127dp"
        android:layout_height="82dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/round_image"
        android:backgroundTint="#201438"
        android:fontFamily="@font/baloo"
        android:onClick="x2Page"
        android:text="X2 Aspen"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendar" />

    <Button
        android:id="@+id/report"
        android:layout_width="127dp"
        android:layout_height="82dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/round_image"
        android:backgroundTint="#201438"
        android:fontFamily="@font/baloo"
        android:text="Report"
        android:onClick="reportPage"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/x2aspen" />

    <Button
        android:id="@+id/lunch"
        android:layout_width="127dp"
        android:layout_height="82dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/round_image"
        android:backgroundTint="#201438"
        android:onClick="lunchPage"
        android:fontFamily="@font/baloo"
        android:text="Lunch"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact" />


</androidx.constraintlayout.widget.ConstraintLayout>